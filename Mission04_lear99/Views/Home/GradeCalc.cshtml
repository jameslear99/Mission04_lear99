@{
}
@model GradeCalcModel

<p> IS 413 Grade Calculator</p>
<form method="post">
    <label>Assignments</label>
    <input id="assignments" type="number" asp-for="assignments"/> <br />

    <label>Quizzes</label>
    <input id="quizzes" type="number" asp-for="quizzes"/> <br />

    <label>Group Projects</label>
    <input id="groupProjects" type="number" asp-for="groupProjects"/> <br />

    <label>INTEX</label>
    <input id="intex" type="number" asp-for="intex"/> <br />

    <label>Midterm Exam</label>
    <input id="midterm" type="number" asp-for="midterm"/> <br />

    <label>Final Exam</label>
    <input id="final" type="number" asp-for="final"/> <br />

    <label>Extra Credit</label>
    <input id="extraCredit" type="number" asp-for="extraCredit"/> <br />

    <input id="calcGrade" type="submit" value="Calculate" />

    <div asp-validation-summary="All"></div>

</form>



<p id="output"></p>
<script src="~/lib/jquery-3.6.3.min.js"></script>
<script src="~/js/JavaScript.js"></script>